# {{ ansible_managed }}
# Red Hat Demo - Collectd Configuration (Minimal)

# Global settings
Hostname "{{ ansible_hostname }}"
FQDNLookup true
BaseDir "/var/lib/collectd"
PluginDir "/usr/lib64/collectd"
TypesDB "/usr/share/collectd/types.db"

# Logging to syslog
LoadPlugin syslog
<Plugin syslog>
    LogLevel info
</Plugin>

# Basic system metrics
LoadPlugin cpu
LoadPlugin memory
LoadPlugin load

# Simple CSV output (no RRD dependencies)
LoadPlugin csv
<Plugin csv>
    DataDir "/var/lib/collectd/csv"
    StoreRates false
</Plugin> 